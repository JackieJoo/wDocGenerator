{

  "tags" :
  {
    "allowUnknownTags" : true,
    "dictionaries" : [ "jsdoc","closure" ]
  },

  "plugins" :
  [
    "plugins/markdown",
    "plugins/summarize"
  ],

  "templates" :
  {

    "applicationName" : "",
    "disqus" : "",
    "googleAnalytics" : "",

    "openGraph" :
    {
      "title" : "",
      "type" : "website",
      "image" : "",
      "site_name" : "",
      "url" : ""
    },

    "meta" :
    {
      "title" : "title",
      "description" : "description",
      "keyword" : "keyword"
    },

    "linenums" : true

  },

  "opts" :
  {
    "encoding" : "utf8",
    "destination" : "../zzz",
    "recurse" : true
  },

  "source" :
  {
    "includePattern" : ".+\\.(js|ss|s)(doc)?$",
    "excludePattern" : "(^|\\/|\\.)(-|node_modules|3rd|external|test)"
  }

}
